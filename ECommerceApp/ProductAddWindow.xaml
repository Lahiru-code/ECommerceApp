<Window x:Class="ECommerceApp.ProductAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Product" Height="358" Width="397" WindowStartupLocation="CenterScreen" Background="#F0F0F0" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240*"/>
            <ColumnDefinition Width="157*"/>
        </Grid.ColumnDefinitions>
        <!-- Form Container -->
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="20" Background="White" VerticalAlignment="Center" HorizontalAlignment="Left" Width="350" Grid.ColumnSpan="2" Margin="24,0,0,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10">

                <!-- Product Name Label and TextBox -->
                <TextBlock Text="Product Name" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="ProductNameBox" Height="30" FontSize="14" Padding="5" BorderThickness="1" BorderBrush="#CCCCCC" Background="#F7F7F7"/>

                <!-- Spacer -->
                <TextBlock Height="10"/>

                <!-- Price Label and TextBox -->
                <TextBlock Text="Price" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="PriceBox" Height="30" FontSize="14" Padding="5" BorderThickness="1" BorderBrush="#CCCCCC" Background="#F7F7F7"/>

                <!-- Spacer -->
                <TextBlock Height="10"/>

                <!-- Quantity Label and TextBox -->
                <TextBlock Text="Quantity" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="QuantityBox" Height="30" FontSize="14" Padding="5" BorderThickness="1" BorderBrush="#CCCCCC" Background="#F7F7F7"/>

                <!-- Spacer -->
                <TextBlock Height="20"/>

                <!-- Save Button -->
                <Button Content="Save" Height="40" Background="#4CAF50" Foreground="White" FontSize="14" BorderThickness="0" Padding="5" HorizontalAlignment="Stretch" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
