<Window x:Class="ECommerceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECommerceApp"
        mc:Ignorable="d"
        Title="E Commerce" Height="344" Width="335" WindowStartupLocation="CenterScreen"
        Background="#F0F0F0" ResizeMode="NoResize">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="20" Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10">
                <!-- Username Label -->
                <TextBlock Text="Username" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameBox" Height="30" Width="Auto" FontSize="14" Padding="5" BorderThickness="1" BorderBrush="#CCCCCC" Background="#F7F7F7"/>

                <!-- Spacer -->
                <TextBlock Height="10"/>

                <!-- Password Label -->
                <TextBlock Text="Password" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Width="Auto" FontSize="14" Padding="5" BorderThickness="1" BorderBrush="#CCCCCC" Background="#F7F7F7"/>

                <!-- Spacer -->
                <TextBlock Height="20"/>

                <!-- Login Button -->
                <Button x:Name="LoginBtn" Content="Login" Height="35" Width="Auto" Background="#4CAF50" Foreground="White" FontSize="14" BorderThickness="0" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="LoginBtn_Click"/>
                <Button x:Name="RegisterBtn" Content="Register" Height="35" Width="Auto" Background="#2196F3" Foreground="White" FontSize="14" BorderThickness="0" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0 10 0 0" Click="RegisterBtn_Click"/>


            </StackPanel>
        </Border>
    </Grid>
</Window>
